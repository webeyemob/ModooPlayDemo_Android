<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:text="@string/anti_addiction"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <FrameLayout
        android:id="@+id/age_tips_container"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_age_tips"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="10dp"
        android:text="@string/age_tips"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_health_game"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="10dp"
        android:text="@string/health_game"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button_real_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/anti_addiction_real_name"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_real_name_custom_ui"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/anti_addiction_real_name_customui"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button_update_user"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:text="@string/anti_addiction_update_user"
        android:textSize="20dp" />
</LinearLayout>