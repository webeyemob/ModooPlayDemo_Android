<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/demo_stage2_fetch_config"
                style="@style/mine_text_style"
                android:text="拉取配置" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_do_mission_max"
                style="@style/mine_text_style"
                android:text="最大值发放奖励" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_do_mission_fixed"
                style="@style/mine_text_style"
                android:text="固定值发放奖励" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_query_stage"
                style="@style/mine_text_style"
                android:text="查询资产" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_extreme_withdraw"
                style="@style/mine_text_style"
                android:text="极速提现" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_withdraw"
                style="@style/mine_text_style"
                android:text="普通提现" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_extreme_withdraw2"
                style="@style/mine_text_style"
                android:text="极速提现2" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_withdraw2"
                style="@style/mine_text_style"
                android:text="普通提现2" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_transform"
                style="@style/mine_text_style"
                android:text="兑换" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_transform_all"
                style="@style/mine_text_style"
                android:text="兑换所有" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_query_missions"
                style="@style/mine_text_style"
                android:text="查询指定资产" />

            <View style="@style/divide_style" />

            <TextView
                android:id="@+id/demo_stage2_query_missions_all"
                style="@style/mine_text_style"
                android:text="查询所有资产" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>